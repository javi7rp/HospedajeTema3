<!-- dialog_editar_perfil.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextNuevoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Nombre"
        android:layout_below="@+id/txtTitulo"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextNuevaEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Edad"
        android:layout_below="@+id/editTextNuevoNombre"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextNuevoEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Correo ElectrÃ³nico"
        android:layout_below="@+id/editTextNuevaEdad"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextInstaUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Usuario de Instagram"
        android:layout_below="@+id/editTextNuevoEmail"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/editTextInstaUser"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar"
            android:background="?attr/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/editTextInstaUser"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar Cambios"
            android:background="?attr/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/editTextInstaUser"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

</RelativeLayout>
